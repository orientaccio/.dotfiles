{
    "workbench.colorTheme": "Nicer High Contrast",
    "workbench.colorCustomizations" : {
        "terminal.foreground": "#dddddd",
        "activityBar.activeBackground": "#88ccff",
        "activityBar.activeBorder": "#88ccff",
        "activityBarBadge.foreground": "#88ccff",
        "badge.foreground": "#88ccff",
        "breadcrumb.activeSelectionForeground": "#88ccff",
        "breadcrumb.focusForeground": "#88ccff",
        "editor.foreground": "#ffffff",
        "editor.selectionHighlightBorder": "#88ccff8c",
        "editorGroup.dropBackground": "#88ccff4b",
        "editorLineNumber.activeForeground": "#88ccff",
        "editorLineNumber.foreground": "#dddddd",
        "editorLink.activeForeground": "#88ccff",
        "list.dropBackground": "#88ccff4b",
        "list.highlightForeground": "#88ccff",
        "panelTitle.activeForeground": "#88ccff",
        "tab.activeForeground": "#ffffff",
        "tab.inactiveBackground": "#000000",
        "tab.activeBackground": "#333333",
        "tab.inactiveModifiedBorder": "#000000",
        "tab.border": "#000000",
        "focusBorder": "#333333",
        "editorGroupHeader.tabsBackground": "#000000",
        "editor.findMatchBackground": "#2277aa",
        "editor.findMatchHighlightBackground": "#2277aa",
        "editor.lineHighlightBorder": "#2277aa",
        "editor.selectionBackground": "#2277aa",
        "selection.background": "#2277aa",
        "statusBar.background": "#000000",
        "statusBar.noFolderBackground": "#000000",
        "statusBar.debuggingBackground": "#000000",
        "statusBar.foreground": "#dddddd",
        "statusBar.debuggingForeground": "#dddddd"
    },
    "editor.minimap.enabled": false,
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 1,

    // Vim
    "vim.statusBarColorControl": false,
    "vim.enableNeovim": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": false,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "jupyter.askForKernelRestart": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "jupyter.debugJustMyCode": false,
    "breadcrumbs.enabled": false,
    "notebook.lineNumbers": "on",

    // Python
    // "python."defaultInterpreterPath": "/home/dot/miniconda3/bin/python",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "black-formatter.args": [
        "--line-length=80  "
    ],
}